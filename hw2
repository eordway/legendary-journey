<h3>Coin Excercise</h3>

<?php

echo "Flipping a coin once...<br><br>";
for($i=0;$i<1;++$i){
  $flip= mt_rand(0,1);
  if ($flip == 0){
	echo "<img src =\"http://clipart-library.com/img1/985324.jpg\" width= \"50px\" height = \"50px\"> ";
